@model TaskProject_Purus.Web.Models.CustomerLoginModel

@{
    ViewBag.Title = "Index";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="col-md-6 portfolio-item">
        <h1 class="page-header">Login</h1>
        <div class="form-group">
            <label for="username">User Name</label>
            <input type="email" class="form-control" name="UserName" placeholder="Enter username" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" name="Password" placeholder="Enter passwod" required>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
}